<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import View.MazeDisplayer?>
<BorderPane onMouseClicked="#mouseClicked" onScroll="#mouseScrolled" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
    <bottom>
        <HBox prefHeight="3.0" prefWidth="434.0" BorderPane.alignment="CENTER" />
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="newBtn" mnemonicParsing="false" onAction="#newGame" text="New" />
                                <MenuItem fx:id="saveBtn" mnemonicParsing="false" onAction="#saveGame" text="Save" />
                                <MenuItem fx:id="loadBtn" mnemonicParsing="false" onAction="#loadGame" text="Load" />

                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>
                                <MenuItem fx:id="propertiesBtn" mnemonicParsing="false" onAction="#propertiesWindow" text="Properties" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Exit">
                            <items>
                                <MenuItem fx:id="exitBtn" mnemonicParsing="false" onAction="#exitGame" text="Exit" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem fx:id="helpBtn" mnemonicParsing="false" onAction="#helpWindow" text="Help" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="About">
                            <items>
                                <MenuItem fx:id="aboutBtn" mnemonicParsing="false" onAction="#aboutWindow" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane fx:id="pane" BorderPane.alignment="CENTER">
            <children>
                <MazeDisplayer fx:id="mazeDisplayer" height="${pane.height}" imageFileNameGoalPosition="./resources/images/endPosition.jpg" imageFileNamePlayer="./resources/images/balu.jpg" imageFileNameSolution="./resources/images/cookie.png" imageFileNameStartPosition="./resources/images/start.jpg" imageFileNameWall="./resources/images/wall.jpg" onKeyPressed="#keyPressed" width="${pane.width}" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Pane>
    </center>
   <left>
      <AnchorPane prefHeight="208.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Maze rows:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Label text="Maze columns:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="textField_mazeRows" text="10" GridPane.columnIndex="1" />
                  <TextField fx:id="textField_mazeColumns" text="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="generate_btn" onAction="#generateMaze" prefHeight="25.0" prefWidth="167.0" text="Generate Maze" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                  <Button fx:id="solution_btn" cancelButton="true" disable="true" onAction="#solveMaze" prefHeight="25.0" prefWidth="167.0" text="Show/Hide Maze Solution" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                  <Button fx:id="restart_btn" cancelButton="true" disable="true" onAction="#restartMaze" prefHeight="25.0" prefWidth="167.0" text="Restart the game" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                  <Label GridPane.rowIndex="5" />
                  <Label text="Player Column:" GridPane.rowIndex="6" />
                  <Label text="Player Row:" GridPane.rowIndex="5" />
                  <Label fx:id="playerRow" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label fx:id="playerCol" GridPane.columnIndex="1" GridPane.rowIndex="6" />
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </left>
</BorderPane>
